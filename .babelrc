{
    "presets": [
        "@babel/react",
        [
            "@babel/env",
            {
                "targets": {
                    "node": 8
                },
                "useBuiltIns": "entry",
                "loose": true,
                "modules": false
            }
        ]
    ],
    "plugins": [
        "react-hot-loader/babel",
        "@babel/plugin-proposal-object-rest-spread",
        "@babel/plugin-proposal-class-properties",
        [
            "babel-plugin-styled-components",
            {
                "ssr": true,
                "displayName": false
            }
        ]
    ]
}
